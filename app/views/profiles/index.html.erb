<div class="text-center">
    <% @users.each do |user| %>
        <div>
            <p><%= user.bio %></p>
            <p><%= user.email %></p>
            <p> My name is <%= user.username %></p>
            <p><%= image_tag user.avatar, style:"width:50px; height:50px;" %></p>
            <!-- Add other user attributes you want to display -->
        </div><br>
    <% end %>
    <% if !@users[0].present?%>
        <h2 style="padding:30px">No users found</h2>
    <% end %>
</div>
